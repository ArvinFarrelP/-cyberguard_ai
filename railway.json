{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "python manage.py migrate && gunicorn cyberguardai.wsgi --workers 2 --threads 4 --timeout 120 --bind 0.0.0.0:$PORT",
        "healthcheckPath": "/",
        "healthcheckTimeout": 5
    }
}